<?xml version="1.0" encoding="UTF-8"?>
<configuration  scan="true" scanPeriod="60 seconds" debug="false">
    <contextName>logback</contextName>
    <property name="log.path" value="./log" />
    <property name="appName" value="hs-code" />
    <!--输出到控制台-->
    <appender name="console" class="com.xxl.job.core.ConsoleAppender">

        <encoder>
            <pattern>[%d{HH:mm:ss.SSS}][%thread][%2level][%logger{36}] - %msg%n</pattern>
        </encoder>
    </appender>

    <!--输出到文件-->
    <appender name="file" class="com.xxl.job.core.rolling.RollingFileAppender">
        <file>${log.path}/hs-code.log</file>
        <rollingPolicy class="com.xxl.job.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${log.path}/${appName}.%d{yyyy-MM-dd}.log</fileNamePattern>
        </rollingPolicy>
        <encoder>
            <pattern>[%d{HH:mm:ss.SSS}][%thread][%2level][%logger{36}] - %msg%n</pattern>
        </encoder>
    </appender>

    <root level="info">
        <appender-ref ref="console" />
        <appender-ref ref="file" />
    </root>
</configuration>